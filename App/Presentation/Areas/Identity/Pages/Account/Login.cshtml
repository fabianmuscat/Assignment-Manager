@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<section>
    <div class="position-absolute top-50 start-50 translate-middle col-8">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg mb-sm-3 mb-md-3 mb-lg-0">
                <h4 class="fw-bold">Local Login</h4>
                <hr>
                
                <form id="account" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="Input.Email" class="col-form-label"></label>
                        <input asp-for="Input.Email" placeholder="unknown@test.com" class="form-control"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Input.Password" class="col-form-label"></label>
                        <input asp-for="Input.Password" class="form-control"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <button type="submit" class="btn btn-success" asp-page="./Login" asp-route-returnUrl="/Assignments/Redirect">Login</button>
                    </div>

                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </form>
            </div>

            <div class="d-sm-none d-md-none d-lg-inline-block col-1 text-center">
                <div class="vr h-100"></div>
            </div>

            <div class="col-sm-12 col-md-12 col-lg">
                <h4 class="fw-bold mb-3">Third-Party Login</h4>
                <hr>
                
                <button class="btn btn-dark w-100 mb-3">
                    <i class="bi bi-google" style="pointer-events: none;"></i>
                    <span>Login with Google</span>
                </button>
                    
                <button class="btn btn-primary w-100">
                    <i class="bi bi-facebook" style="pointer-events: none;"></i>
                    <span>Login with Facebook</span>
                </button>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial"/>
    }
</section>
